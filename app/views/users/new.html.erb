<header class="page-header">
    <h1>Signup</h1>
  </header>

<%= form_for :user, url: '/users' do |f| %>
<div class="form-group row">
  <label class="col-sm-3 col-form-label">Name</label>
  <div class="col-sm-9"><%= f.text_field :name %></div>
</div>
<div class="form-group row">
  <label class="col-sm-3 col-form-label">Email</label>
  <div class="col-sm-9"><%= f.text_field :email %></div> 
</div>
<div class="form-group row">
  <label class="col-sm-3 col-form-label">Password</label>
  <div class="col-sm-9"><%= f.password_field :password %></div> 
</div>
<div class="form-group row">
  <label class="col-sm-3 col-form-label">Password Confirmation</label>
  <div class="col-sm-9"><%= f.password_field :password_confirmation %></div>
</div>

<div type="button" class="submit-button col-sm-1"> 
  <%= f.submit "Submit" %>
</div>
<% end %>
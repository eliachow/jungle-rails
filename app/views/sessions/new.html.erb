<header class="page-header">
    <h1>Login</h1>
  </header>

<%= form_tag '/login' do %>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">Email</label>
    <div class="col-sm-9"><%= text_field_tag :email %></div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">Password</label>
    <div class="col-sm-9"><%= password_field_tag :password %></div>
  </div>

  <div type="button" class="submit-button col-sm-1"> 
    <%= submit_tag "Submit" %>
  </div>
<% end %>